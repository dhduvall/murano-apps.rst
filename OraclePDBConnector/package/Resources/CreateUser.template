FormatVersion: 2.0.0
Version: 1.0.0
Name: Check Status

Parameters:
  database: $database
  username: $username
  password: $password

Body: |
  return create('"{0}" "{1}" "{2}"'.format(args.database, args.username, args.password)).stdout

Scripts:
  create:
    Type: Application
    Version: 1.0.0
    EntryPoint: pdb_create_user.sh
    Files:
      - <ora_env.sh>

    Options:
      captureStdout: true
      captureStderr: true
